   <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />

   <!-- NOTE: EditTextPreference accepts EditText attributes. -->
   <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
   <EditTextPreference
       android:capitalize="words"
       android:defaultValue = "0"
       android:inputType="number"
       android:key="max_sms"
       android:maxLines="1"
       android:selectAllOnFocus="true"
       android:singleLine="true"
       android:title="@string/pref_title_display_max_sms" />

    <PreferenceCategory

        android:title = "Schedule" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="enable_schedule"
            android:title="Enable Schedule"
            android:summary="Enable or disable Schedule" />


        <EditTextPreference
            android:capitalize="words"
            android:defaultValue = "21:00"
            android:inputType="time"
            android:key="start_time"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Start time" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue = "7:00"
            android:inputType="time"
            android:key="end_time"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="End time" />


    </PreferenceCategory>


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />

</PreferenceScreen>
